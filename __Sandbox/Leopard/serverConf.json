{
    
    "fileVersion" : "0.1",

    "usePortNumber" : 9998,           // port number that the WAM server will be listening to


    "localhost" : {                         // server configuration
        "hostName"      : "leopard",         // Network DNS name for the server
        "maxCPUs"       : 6,               // max number of CPUs that are allowed to submit jobs
        "maxGPUs"       : 0,                // max number of GPUs that are allowed to submit jobs
        "maxMEM"        : 64,              // amount of install RAM in Gb
        "IPaddr"        : "10.200.209.20",  // IP address of the machine
        "logFileFile"   : "server.log"      // file
    }, 


    "nameServer" : {
        "registerWithNameServer" : true,  // should we register the uri with 
                                          // a name server. You probably want
                                          // to do this if you want to call 
                                          // the jss server from a remote jss client
        "nameServerIP" : "10.200.209.12", // network number for the machine where the 
                                          // name server resides  
        "nameServerPort" : 9999,          // port # where the name server is listening for incoming connections 

        "quitOnNameServerConnectionError" : true, // should we stop the jss server
                                                    // in case we cannot connect 
                                                    // to the name server? 

        "reconnectToNameServer_minutes" : 1  // check to see every N minutes if the jss server running on this computer
                                             // is registered with the name server. We will attempt to register/reregister
                                             // with the name server the jss sever in case it is not registred with the name server.
    } 

}
